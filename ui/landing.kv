#:import dp kivy.metrics.dp

<LandingScreen>:
    MDNavigationLayout:
        ScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Home"
                        elevation: 2
                        left_action_items: [["cog", lambda x: nav_drawer.set_state("toggle")]]
                    MDBoxLayout:
                        orientation: "vertical"
                        md_bg_color: app.theme_cls.bg_darkest
                        padding: dp(16)
                        spacing: dp(10)



                    MDBoxLayout:
                        size_hint_y: None
                        height: dp(80)
                        md_bg_color: app.theme_cls.bg_dark
                        MDBoxLayout:
                            orientation: "vertical"
                            size_hint_x:1
                            padding: 0, dp(4), 0, dp(4)
                            md_bg_color: 0.16, 0.16,0.16, 1
                            MDIconButton:
                                icon: "home"
                                icon_size: "32dp"
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                on_release: app.go_to("landing")
                            MDLabel:
                                text: "Home"
                                halign:"center"
                                font_style:"Caption"
                                theme_text_color:"Custom"
                                text_color: 1,1,1,1

                        MDBoxLayout:
                            orientation: "vertical"
                            size_hint_x: 1
                            padding: 0, dp(4), 0, dp(4)
                            md_bg_color: 0.1, 0.1, 0.1, 1
                            MDIconButton:
                                icon:"currency-usd"
                                icon_size:"32dp"
                                pos_hint: {"center_x":0.5, "center_y":0.5}
                            MDLabel:
                                text:"Budget"
                                halign:"center"
                                font_style:"Caption"
                                theme_text_color:"Custom"
                                text_color:1,1,1,1
                        MDBoxLayout:
                            orientation: "vertical"
                            size_hint_x: 1
                            padding: 0, dp(4), 0, dp(4)
                            md_bg_color: 0.1, 0.1, 0.1, 1

                            MDIconButton:
                                icon: "calendar-month"
                                icon_size: "32dp"
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                # on_release: app.go_to("calendar")

                            MDLabel:
                                text: "Calendar"
                                halign: "center"
                                font_style: "Caption"
                                theme_text_color: "Custom"
                                text_color: 1, 1, 1, 1



        MDNavigationDrawer:
            id: nav_drawer
            MDList:
                OneLineIconListItem:
                    text: "Settings"
                    disabled: True
                    IconLeftWidget:
                        icon: "cog"
                MDBoxLayout:
                    adaptive_height: True
                    padding: dp(12), dp(8)
                    spacing: dp(12)
                OneLineIconListItem:
                    text: "Learn"
                    on_release:
                        nav_drawer.set_state("close")
                        app.open_learn_page()
                    IconLeftWidget:
                        icon: "school"
                OneLineIconListItem:
                    text: "My profile"
                    on_release:
                        nav_drawer.set_state("close")
                        app.go_to("profile")
                    IconLeftWidget:
                        icon: "account-circle"
                OneLineIconListItem:
                    text: ""
                    disabled: True
                OneLineIconListItem:
                    text: "About"
                    on_release:
                        nav_drawer.set_state("close")
                        app.go_to("about")
                    IconLeftWidget:
                        icon: "information-outline"
                OneLineIconListItem:
                    text: "Privacy"
                    on_release:
                        nav_drawer.set_state("close")
                        app.go_to("privacy")
                    IconLeftWidget:
                        icon: "shield-lock-outline"
                OneLineIconListItem:
                    text: "Log out"
                    on_release:
                        nav_drawer.set_state("close")
                        app.go_to("login")
                    IconLeftWidget:
                        icon: "logout"
