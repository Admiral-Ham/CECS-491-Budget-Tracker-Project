#:import dp kivy.metrics.dp

<LandingScreen>:
    MDNavigationLayout:
        ScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Home"
                        elevation: 2
                        left_action_items: [["cog", lambda x: nav_drawer.set_state("toggle")]]
                    MDBoxLayout:
                        orientation: "vertical"
                        md_bg_color: app.theme_cls.bg_darkest
                        padding: dp(16)
                        spacing: dp(10)
                    MDBoxLayout:
                        size_hint_y: None
                        height: dp(64)
                        padding: dp(12)
                        spacing: dp(24)
                        md_bg_color: app.theme_cls.bg_dark
                        MDIconButton:
                            icon: "home"
                            on_release: app.go_to("landing")
                        MDIconButton:
                            icon: "currency-usd"
                            on_release: app.go_to("budget")
                        MDIconButton:
                            icon: "calendar-month"
                            on_release: app.go_to("calendar")
        MDNavigationDrawer:
            id: nav_drawer
            MDList:
                OneLineIconListItem:
                    text: "Settings"
                    disabled: True
                    IconLeftWidget:
                        icon: "cog"
                MDBoxLayout:
                    adaptive_height: True
                    padding: dp(12), dp(8)
                    spacing: dp(12)
                OneLineIconListItem:
                    text: "Learn"
                    on_release:
                        nav_drawer.set_state("close")
                        app.go_to("learn")
                    IconLeftWidget:
                        icon: "school"
                OneLineIconListItem:
                    text: "My profile"
                    on_release:
                        nav_drawer.set_state("close")
                        app.go_to("profile")
                    IconLeftWidget:
                        icon: "account-circle"
                OneLineIconListItem:
                    text: ""
                    disabled: True
                OneLineIconListItem:
                    text: "About"
                    on_release:
                        nav_drawer.set_state("close")
                        app.go_to("about")
                    IconLeftWidget:
                        icon: "information-outline"
                OneLineIconListItem:
                    text: "Privacy"
                    on_release:
                        nav_drawer.set_state("close")
                        app.go_to("privacy")
                    IconLeftWidget:
                        icon: "shield-lock-outline"
                OneLineIconListItem:
                    text: "Log out"
                    on_release:
                        nav_drawer.set_state("close")
                        app.go_to("login")
                    IconLeftWidget:
                        icon: "logout"
